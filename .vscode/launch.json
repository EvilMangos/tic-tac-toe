{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${workspaceFolder}/index.ts",
			"runtimeArgs": [
				"--loader",
				"ts-node/esm" // Enable ESM loader for `.ts` files
			],
			"outFiles": ["${workspaceFolder}/**/*.ts"],
			"sourceMaps": true,
			"cwd": "${workspaceFolder}"
		}
	]
}
